<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.santalucia.arq.ams</groupId>
		<artifactId>ams-parent-sl-sw</artifactId>
		<version>0.0.5-SNAPSHOT</version>
	</parent>
	<groupId>com.santalucia.example</groupId>
	<artifactId>example-app</artifactId>
	<version>1.0.1-SNAPSHOT</version>
	<name>example-app</name>
	<description>Demo project for Spring Boot</description>

	<properties>
		<swagger.codegen.inputSpec>src/main/resources/api/swagger.yaml</swagger.codegen.inputSpec>
		<swagger.codegen.package>${project.groupId}</swagger.codegen.package>
		<swagger.codegen.skip.server>false</swagger.codegen.skip.server>
		<swagger.codegen.skip.client>false</swagger.codegen.skip.client>
		<mybatis.codegen.output.dir>src/main/java</mybatis.codegen.output.dir>
		<git.hooks.skip>false</git.hooks.skip>
	</properties>

	<dependencies>

		<dependency>
			<groupId>com.santalucia.arq.ams</groupId>
			<artifactId>ams-componentes-web</artifactId>
		</dependency>

		<dependency>
			<groupId>com.santalucia.arq.ams</groupId>
			<artifactId>ams-componentes-web-security</artifactId>
		</dependency>

		<dependency>
			<groupId>com.santalucia.arq.ams</groupId>
			<artifactId>ams-starter-observability</artifactId>
		</dependency>

		<dependency>
			<groupId>com.santalucia.arq.ams</groupId>
			<artifactId>ams-componentes-exceptions</artifactId>
		</dependency>

		<dependency>
			<groupId>com.santalucia.arq.ams</groupId>
			<artifactId>ams-componentes-database</artifactId>
		</dependency>

		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<scope>provided</scope>
		</dependency>
		



		<!-- Needed for custom yaml tags -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-configuration-processor</artifactId>
			<optional>true</optional>
		</dependency>

		<!-- IBM Informix JDBC Driver -->
		<dependency>
			<groupId>com.ibm.informix</groupId>
			<artifactId>jdbc</artifactId>
		</dependency>


		<!-- Oracle JDBC Driver -->
		<dependency>
			<groupId>com.oracle.database.jdbc</groupId>
			<artifactId>ojdbc11</artifactId>
		</dependency>

		<dependency>
			<groupId>com.oracle.database.nls</groupId>
			<artifactId>orai18n</artifactId>
		</dependency>
		<dependency>
			<groupId>com.oracle.database.jdbc</groupId>
			<artifactId>ucp</artifactId>
		</dependency>

		<!-- Test Dependencies -->
		<dependency>
			<groupId>com.santalucia.arq.ams</groupId>
			<artifactId>ams-componentes-web-test</artifactId>
			<scope>test</scope>
		</dependency>

		<!-- Devtools -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-devtools</artifactId>
			<scope>runtime</scope>
			<optional>true</optional>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>

	</build>

</project>
